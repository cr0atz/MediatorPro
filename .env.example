# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/mediator_pro
PGHOST=localhost
PGPORT=5432
PGUSER=your_db_user
PGPASSWORD=your_db_password
PGDATABASE=mediator_pro

# Application Settings
NODE_ENV=development
PORT=5000
SESSION_SECRET=generate_a_random_64_character_string_here

# OpenAI API (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here

# File Storage
# For self-hosted deployments, use local file storage:
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# Optional: Google Cloud Storage (for Replit deployments)
# DEFAULT_OBJECT_STORAGE_BUCKET_ID=your-gcs-bucket-id
# PUBLIC_OBJECT_SEARCH_PATHS=public
# PRIVATE_OBJECT_DIR=.private
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/gcs-credentials.json

# Zoom Integration (Optional - can be configured via Settings UI)
# Server-to-Server OAuth credentials from Zoom Marketplace
ZOOM_ACCOUNT_ID=your-zoom-account-id
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret

# Authentication Configuration
# For SELF-HOSTED deployments: Set USE_LOCAL_AUTH=true to use username/password
# This also disables secure cookies which is needed for Apache/nginx reverse proxy setups
# For REPLIT deployments: Leave USE_LOCAL_AUTH unset to use Replit Authentication
USE_LOCAL_AUTH=true

# Admin credentials for local authentication
ADMIN_USERNAME=danny
ADMIN_PASSWORD=DJ6146dj!

# Session secret - change this to a random string in production
SESSION_SECRET=change-this-in-production

# Replit Authentication (only needed if USE_LOCAL_AUTH is not true)
# REPL_ID=your-repl-id
# REPLIT_DOMAINS=yourdomain.com
# ISSUER_URL=https://replit.com/oidc

# Development-only (do not use in production)
# REPLIT_DEV_DOMAIN=yourdomain.com
